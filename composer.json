{
  "name": "horat1us/yii2-uuid-behavior",
  "description": "Yii2 UUID generation behavior",
  "type": "library",
  "require": {
    "php": "^7.4 | ^8.0",
    "yiisoft/yii2": "^2.0.51",
    "ramsey/uuid": "^3.8 | ^4.7"
  },
  "require-dev": {
    "horat1us/yii2-asset-free": "^1.0",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "test": "./vendor/bin/phpunit",
    "cover": "./vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "autoload": {
    "psr-4": {
      "Horat1us\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Yii\\Tests\\": "tests/"
    }
  }
}
